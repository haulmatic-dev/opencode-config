#!/usr/bin/env python3
"""
GPTCache control for opencode - Python wrapper for gptcache_server
"""

import subprocess
import sys
import os
from pathlib import Path

# Configuration
HOME = Path.home()
GPTCACHE_DIR = HOME / ".gptcache"
GPTCACHE_DB = GPTCACHE_DIR / "sqlite.db"
GPTCACHE_PID = GPTCACHE_DIR / ".gptcache.pid"
GPTCACHE_PORT = 8000

def get_gptcache_server_exec():
    """Find gptcache_server executable"""
    # Check pyenv first
    pyenv_path = HOME / ".pyenv" / "versions" / "3.10.15" / "bin" / "gptcache_server"
    if pyenv_path.exists():
        return str(pyenv_path)
    
    # Check system path
    result = subprocess.run(
        ["which", "gptcache_server"],
        capture_output=True,
        text=True
    )
    if result.returncode == 0:
        return result.stdout.strip()
    
    return None

def gptcache_status():
    """Check GPTCache status"""
    if GPTCACHE_DB.exists():
        # Get cache size
        size = subprocess.run(
            ["du", "-sh", str(GPTCACHE_DIR)],
            capture_output=True,
            text=True
        )
        size_mb = size.stdout.strip() if size.returncode == 0 else "N/A"
        
        # Get entry count
        result = subprocess.run(
            ["sqlite3", str(GPTCACHE_DB), "SELECT COUNT(*) FROM gptcache_question"],
            capture_output=True,
            text=True
        )
        entries = result.stdout.strip() if result.returncode == 0 else "N/A"
        
        print(f"âœ“ GPTCache database exists at {GPTCACHE_DB}")
        print(f"  Size: {size_mb}")
        print(f"  Entries: {entries}")
        return 0
    else:
        print("â—‹ GPTCache not initialized")
        return 1

def gptcache_start():
    """Start GPTCache server"""
    # Check if gptcache_server is available
    exec_path = get_gptcache_server_exec()
    if not exec_path:
        print("âœ— gptcache_server not found")
        print("  Install with: pip install gptcache")
        print("  Requires: Python 3.10+ with numpy<2")
        return 1
    
    # Check if already running
    if GPTCACHE_PID.exists():
        with open(GPTCACHE_PID) as f:
            pid = int(f.read().strip())
        try:
            os.kill(pid, 0)
            print(f"âœ“ GPTCache server already running (PID: {pid})")
            return 0
        except ProcessLookupError:
            pass
        except:
            pass
        os.remove(GPTCACHE_PID)
    
    # Check if server is already responding
    result = subprocess.run(
        ["curl", "-s", f"http://127.0.0.1:{GPTCACHE_PORT}/"],
        capture_output=True,
        timeout=5
    )
    if result.returncode == 0:
        print(f"âœ“ GPTCache server already responding (http://127.0.0.1:{GPTCACHE_PORT})")
        return 0
    
    # Start server
    print(f"ðŸš€ Starting GPTCache server...")
    log_path = GPTCACHE_DIR / "server.log"
    
    # Ensure cache directory exists
    GPTCACHE_DIR.mkdir(exist_ok=True)
    
    process = subprocess.Popen(
        [exec_path, "-s", "127.0.0.1", "-p", str(GPTCACHE_PORT), "-d", str(GPTCACHE_DIR)],
        stdout=open(log_path, "w"),
        stderr=subprocess.STDOUT,
        start_new_session=True
    )
    
    # Save PID
    with open(GPTCACHE_PID, "w") as f:
        f.write(str(process.pid))
    
    # Wait for server to be ready
    import time
    for i in range(10):
        time.sleep(0.5)
        try:
            result = subprocess.run(
                ["curl", "-s", f"http://127.0.0.1:{GPTCACHE_PORT}/"],
                capture_output=True,
                timeout=2
            )
            if result.returncode == 0:
                print(f"âœ“ GPTCache server ready (http://127.0.0.1:{GPTCACHE_PORT})")
                print(f"   PID: {process.pid}")
                return 0
        except:
            pass
    
    print("âœ— GPTCache server failed to start")
    print(f"   Check logs: {log_path}")
    return 1

def gptcache_stop():
    """Stop GPTCache server"""
    if not GPTCACHE_PID.exists():
        print("No GPTCache server running")
        return 0
    
    with open(GPTCACHE_PID) as f:
        pid = int(f.read().strip())
    
    try:
        os.kill(pid, 0)
        # Kill the process
        os.kill(pid, 9)
        print(f"âœ“ Stopped GPTCache server (PID: {pid})")
        os.remove(GPTCACHE_PID)
    except ProcessLookupError:
        print(f"âœ— No process with PID {pid}")
        os.remove(GPTCACHE_PID)
    except:
        print(f"âœ— Failed to stop server")
        return 1
    
    return 0

def gptcache_clear():
    """Clear GPTCache"""
    if not GPTCACHE_DB.exists():
        print("GPTCache database not found")
        return 1
    
    print("ðŸ—‘  Clearing GPTCache...")
    result = subprocess.run(
        ["sqlite3", str(GPTCACHE_DB), "DELETE FROM gptcache_answer; DELETE FROM gptcache_question; DELETE FROM gptcache_question_dep; DELETE FROM gptcache_session; DELETE FROM gptcache_report"],
        capture_output=True,
        text=True
    )
    
    if result.returncode == 0:
        size = subprocess.run(
            ["du", "-sh", str(GPTCACHE_DIR)],
            capture_output=True,
            text=True
        )
        new_size = size.stdout.strip() if size.returncode == 0 else "N/A"
        print(f"âœ“ Cache cleared (new size: {new_size})")
    else:
        print("âœ— Failed to clear cache")
        return 1
    
    return 0

def main():
    if len(sys.argv) < 2:
        print("Usage: gptcache-wrapper {status|start|stop|clear}")
        print("\nCommands:")
        print("  status  - Check GPTCache status")
        print("  start   - Start GPTCache server")
        print("  stop    - Stop GPTCache server")
        print("  clear   - Clear all cached responses")
        sys.exit(1)
    
    command = sys.argv[1]
    
    if command == "status":
        sys.exit(gptcache_status())
    elif command == "start":
        sys.exit(gptcache_start())
    elif command == "stop":
        sys.exit(gptcache_stop())
    elif command == "clear":
        sys.exit(gptcache_clear())
    else:
        print(f"Unknown command: {command}")
        sys.exit(1)

if __name__ == "__main__":
    main()
