{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["/Users/buddhi/.config/opencode/AGENTS.md"],
  "permission": {
    "edit": "allow",
    "bash": "allow",
    "write": "allow"
  },
  "command": {
    "test": {
      "description": "A test command to verify custom commands work",
      "template": "This is a test command. If you see this, custom commands are working! Say hello and confirm you can execute custom commands.",
      "agent": "general",
      "model": "glm-4.7"
    },
    "workspace-init": {
      "description": "Initialize project workspace with opencode tools",
      "template": "Run the workspace initialization script to set up this project with opencode. Execute: ~/.config/opencode/bin/workspace-init --force\n\nAfter running, summarize what was set up and report any errors.",
      "agent": "build",
      "model": "glm-4.7"
    },
    "opencode-init": {
      "description": "Install opencode system-wide tools",
      "template": "Run the system initialization script to install opencode tools. Execute: ~/.config/opencode/bin/opencode-init --quiet\n\nAfter running, summarize what was installed and report any errors.",
      "agent": "build",
      "model": "glm-4.7"
    },
    "workspace-status": {
      "description": "Check workspace and system status",
      "template": "Check the current workspace status by running these commands:\n1. ~/.config/opencode/hooks/session-start.sh\n2. bd status\n3. cm doctor --json\n\nSummarize the status in a clear format showing what's initialized and what's missing.",
      "agent": "general",
      "model": "glm-4.7"
    }
  },
  "provider": {
    "glm-47": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Z.AI",
      "options": {
        "baseURL": "https://api.z.ai/api/coding/paas/v4"
      },
      "models": {
        "glm-4.7": {
          "name": "GLM 4.7 BYOM",
          "limit": {
            "context": 200000,
            "output": 8192
          }
        }
      }
    },
    "glm-46": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Z.AI",
      "options": {
        "baseURL": "https://api.z.ai/api/coding/paas/v4"
      },
      "models": {
        "glm-4.6": {
          "name": "GLM 4.6 BYOM",
          "limit": {
            "context": 200000,
            "output": 8192
          }
        }
      }
    },
    "gemini-2-5-pro": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Google AI",
      "options": {
        "baseURL": "https://generativelanguage.googleapis.com/v1beta/"
      },
      "models": {
        "gemini-2.5-pro": {
          "name": "Gemini 2.5 Pro [Google]",
          "limit": {
            "context": 1000000,
